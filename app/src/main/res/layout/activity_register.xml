<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gray_background"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"/>

    <!--
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:src="@drawable/login_background"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"/>
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DesKo"
        android:textStyle="bold"
        android:textSize="56dp"
        android:id="@+id/logo"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/team_spinner"
        android:layout_width="240dp"
        android:layout_height="48dp"
        style="@android:style/Widget.Spinner"
        android:layout_centerHorizontal="true"
        android:prompt="@string/team_prompt"
        android:layout_above="@id/name_spinner"/>
         <!--android:entries="@array/team_array"-->

    <Spinner
        android:id="@+id/name_spinner"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_margin="0dp"
        style="@android:style/Widget.Spinner"
        android:layout_centerHorizontal="true"
        android:entries="@array/name_array"
        android:prompt="@string/name_prompt"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Log in"/>

    <Button
        android:id="@+id/new_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="New user?"/>

</RelativeLayout>
